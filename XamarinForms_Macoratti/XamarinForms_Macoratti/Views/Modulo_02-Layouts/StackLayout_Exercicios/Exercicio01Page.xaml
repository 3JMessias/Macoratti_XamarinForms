<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinForms_Macoratti"
             x:Class="XamarinForms_Macoratti.Exercicio01Page"
             >
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" >
        </OnPlatform>
    </ContentPage.Padding>

    <StackLayout 
        BackgroundColor="White"
        VerticalOptions="FillAndExpand"
        Padding="10,10"
        >
        <Label
            Text="Torta de Maça" />
        <Image Source="{local:ImageResource XamarinForms_Macoratti.Images.tortamaca.jpg}" 
                Aspect="AspectFill"
                WidthRequest="250" HeightRequest="250"/>
        <StackLayout Orientation="Horizontal" Spacing="20" HorizontalOptions="StartAndExpand">
            <Button Text="Like" />
            <Button Text="Comentar" />
            <Button Text="Compartilhar" />
        </StackLayout>
        <BoxView HeightRequest="1" Color="#f0f0f0" HorizontalOptions="FillAndExpand" />
        <Label Text="250 likes" FontAttributes="Bold"/>
        <Label Text="Descasque as maças, retire as sementes e corte-as em fatias não muito finas. Passe as fatias no açucar cristal misturado com a canela em pó. Reserve. Unte uma forma refratária com manteiga e forre o fundo com um camada de fatias de maça." />

    </StackLayout>
</ContentPage>